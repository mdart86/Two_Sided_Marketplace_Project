<div class="logout">
    <% if user_signed_in? %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"btn btn-danger" %>
        <span class="logged-in-as">Logged in as: <%= current_user.email %></span>
    <% else %>
        <%= link_to "Login", new_user_session_path, class: "has-background-dark has-text-light p-2" %>
        <%= link_to "Sign Up" , new_user_registration_path, class: "has-background-dark has-text-light p-2" %>
    <% end %>
</div>
