<% if @user_profiles.user_id == current_user.id %>
<h1>User Profile</h1>
    <table>
        <thead>
            <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Age</th>
            <th>Contact number</th>
            <th>Street Number</th>
            <th>Street Name</th>
            <th>Suburb</th>
            <th>State</th>
            <th>Postcode</th>
            <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
            <td><%= @user_profiles.first_name %></td> 
            <td><%= @user_profiles.last_name %></td>
            <td><%= @user_profiles.age %></td>
            <td><%= @user_profiles.contact_number %></td>
            <td><%= @user_profiles.user_id %></td>
            <td><%= @user_profiles.address.street_number %></td> 
            <td><%= @user_profiles.address.street_name %></td>
            <td><%= @user_profiles.address.suburb %></td>
            <td><%= @user_profiles.address.state %></td>
            <td><%= @user_profiles.address.postcode %></td>
            <td><%= link_to 'Edit', edit_user_profile_path(@user_profiles) %></td>
            <td><%= link_to 'Destroy', @user_profiles, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        </tbody>
    </table>
<% end %>


