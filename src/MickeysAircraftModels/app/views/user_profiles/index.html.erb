<%= render "shared/navbar" %>

<p id="notice"><%= notice %></p>
<% if current_user %>
<h1>User Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Contact number</th>
      <th>Street Number</th>
      <th>Street Name</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr>
        <td><%= user_profile.first_name %></td> 
        <td><%= user_profile.last_name %></td>
        <td><%= user_profile.age %></td>
        <td><%= user_profile.contact_number %></td>
        <td><%= user_profile.user_id %></td>
          <td><%= user_profile.address.street_number %></td> 
          <td><%= user_profile.address.street_name %></td>
          <td><%= user_profile.address.suburb %></td>
          <td><%= user_profile.address.state %></td>
          <td><%= user_profile.address.postcode %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(user_profile) %></td>
        <td><%= link_to 'Destroy', user_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>