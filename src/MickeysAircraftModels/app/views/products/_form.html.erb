<div class="entry-card" style="width: 18rem;">
  <div class="entry-card-body">
  <br>
    <%= simple_form_for(@product) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price, input_html: { min: '1', max: '500', step: '0.05' } %>
        <%= f.input :condition, collection: ["New", "Pre-owned", "Damaged", "Discolouration"] %>
        <%= f.input :scale, collection: ["1:120", "1:130", "1:160", "1:200", "1:220", "1:250", "1:350", "1:400", "1:500"] %>
        <%= f.input :aircraft_model %>
        <%= f.file_field :picture %>
      </div>
      <br>
      <div class="form-actions">
        <%= f.button :submit, class:"btn btn-success" %>
      </div>
    <% end %>
  </div>    
</div>
