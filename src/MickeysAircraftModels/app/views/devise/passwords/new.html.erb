<div class="entry-card" style="width: 18rem;">
  <%= image_tag "logo", :class => "logo_image" %>
  <div class="entry-card-body">
    <br>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <p class="log-in-message">Forgot your password?</p>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send Instructions", class:"btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
<br>
<br>
<div class="back-to-login">
  <%= link_to "Back to Login Page", root_path, class:"btn btn-primary btn-lg" %>
</div>